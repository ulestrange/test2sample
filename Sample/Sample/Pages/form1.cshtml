@page
@model Sample.Pages.Form1Model
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>form1</title>
</head>
<body>

    <form method="post">

        <input asp-for=HasVisitedSligo>
        <label asp-for=HasVisitedSligo> Have you visited Sligo?</label>
       
        <fieldset>
            <legend>Which counties have you visited </legend>

            @for(int i=0; i<Model.CountyList.Length; i++)
            {
                <input asp-for=HasVisitedCounty[i]>
                <label asp-for=HasVisitedCounty[i]>
            @Model.CountyList[i] </label>

            }


        </fieldset>
        
        
        <button type="submit">Sign Me Up Now</button>
    </form>

    <section>
        <ul>
            @for (int i=0; i<Model.CountyList.Length; i++)
            {
                if(Model.HasVisitedCounty[i])
                {
                    <li>@Model.CountyList[i]</li>
                }

            }
        </ul>

    </section>
</body>
</html>
